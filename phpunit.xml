<phpunit
    bootstrap="tests/bootstrap.php"
    colors="true"
    testdox="true"
    cacheDirectory="var/phpunit"
>
    <source>
        <include>
            <directory>src</directory>
        </include>
    </source>

    <testsuites>
        <testsuite name="Tests">
            <directory suffix="Test.php">tests</directory>
        </testsuite>
    </testsuites>
</phpunit>
